<!DOCTYPE html>
<html lang="pl-PL">
<head>
	 <title>
       Szczegóły zamówienia   </title>
	<meta charset="UTF-8">
<% include ../../../partials/head %>

</head>
<body>
<% include ../../../partials/header-manager %>

<tlo>
    <!-- Główna-->
	<div class="container">
	
	<tbody>
        <div class="card mt-4">
		<div class="card-header text-center">
                         <h3 class="card-title" align="center"> <%= eventtab[0].topic %></h3>
                        </div>
            <div class="card-body">
            <div class="row ">
					<div class="col-9 align-self-center">
            <h5><i class="fas fa-user-graduate"></i>  <%= eventtab[0].Name %></h5>
            <h5><b><i class="fas fa-map-marker-alt"></i> <%= eventtab[0].city %></b>, Hotel <%= eventtab[0].hotel %> </h5> 
            <h5> <b><i class="fas fa-table"></i> <%= eventtab[0].date %> r.</b> (godz. 9:00-15:00)</h5>
			<h5> <i class="fas fa-coins"> <%= eventtab[0].price %> zł/os. netto</i></h5>
			</div>
			<div class="col-2 align-self-center">
            <a href="/editevents:<%= eventtab[0].id_event %>" class="btn btn-success">Edytuj szkolenie</a>
			</div>
			</div>
            </div>
        </div>
        <!-- /.card -->


            <!-- uczestnicy -->
                <div class="card card-outline-secondary my-4">
                        <div class="card-header text-center">
                         Uczestnicy:
                        </div>
                            <div class="card-body">
                                <div id="table" class="table-editable ">
                                        <span class="table-add float-right mb-3 mr-2"><a href="/buy:<%= eventtab[0].id_event %>" class="text-success">
                                        <i class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
                                        <table class="table table-bordered table-responsive-md table-striped text-center">
                                          <thead>
                                            <tr>
                                              <th class="text-center">Imię</th>
                                              <th class="text-center">Nazwisko</th>
                                              <th class="text-center">Instytucja</th>
                                              <th class="text-center">Rabat</th>
											   <th class="text-center"> </th>
                                            </tr>
                                          </thead>
                                                                                
											<% for(let i = 0; i < detailstab.length; i++) { %>
                                            
                                            <tr>
                                            <td>
                                            <a href="/showuser:<%= detailstab[i].id_user %>" ><%= detailstab[i].imie %></a>
                                            </td>
                                             <td>
                                            <a href="/showuser:<%= detailstab[i].id_application %>" ><%= detailstab[i].nazwisko %></a>
                                            </td>
                                              <td>
                                            <a href="/showcompany<%= detailstab[i].id_company %>" > <%= detailstab[i].name %> </a>
                                            </td>
                                            <td>
												<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#rabat">
													<%= detailstab[i].rabat %>
												</button>
												<div class="modal fade" id="rabat" tabindex="-1" role="dialog" aria-labelledby="rabatTitle" aria-hidden="true">
												 <div class="modal-dialog modal-dialog-centered" role="document">
												  <div class="modal-content">
												   <div class="modal-header">
													   <h5 class="modal-title" id="rabatTitle">Nadaj rabat</h5>
													  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
														 <span aria-hidden="true">&times;</span>
													 </button>
													 </div>
												  <div class="modal-body">
													  Sure? 
												  </div>
												   <div class="modal-footer">
												   <a href="/deleteapp:<%= detailstab[i].id_application %>" class="btn btn-danger">Potwierdź</a>
														 </div>
													</div>
												 </div>
												</div>
                                                </td>
												<td>
												<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rezygnacja">
													Usuń
												</button>
												<div class="modal fade" id="rezygnacja" tabindex="-1" role="dialog" aria-labelledby="rezygnacjaTitle" aria-hidden="true">
												 <div class="modal-dialog modal-dialog-centered" role="document">
												  <div class="modal-content">
												   <div class="modal-header">
													   <h5 class="modal-title" id="rezygnacjaTitle">Rezygnacja</h5>
													  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
														 <span aria-hidden="true">&times;</span>
													 </button>
													 </div>
												  <div class="modal-body">
													  Sure? 
												  </div>
												   <div class="modal-footer">
												   <a href="/deleteapp:<%= detailstab[i].id_application %>" class="btn btn-danger">Usuń</a>
														 </div>
													</div>
												 </div>
												</div>
											
                                            </td>
                                            </tr>
                                           <% } %>
                                         
                                        </table>
                                      </div>
                                      
									</div>
									
                      </div>
                  
		
		<!-- /.card -->

		
      </div>
</tbody>	  
  </tlo>     
<% include ../../../partials/error %>
</main>
<% include ../../../partials/footer %>

</body>
</html> 