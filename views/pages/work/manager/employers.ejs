	<tbody>
		<% if(employer.length == 0){ %>
		<h4><br> Brak prowadzących. </h4>
		<%}else{
	     for(var i = 0; i < employer.length; i++) { %>
		<h4> </h4>
		<div class="card">
			<div class="card-body">
				<div class="row ">
					<div class="col-9 align-self-center">
						<h5 class="card-title" style="color: #000066;"> <%= employer[i].name %>  <%= employer[i].last_name %> </h5>
						
					</div>

					<div class="col-3">					
							<button type="button" id="but" data-toggle="modal" data-target="#edit-<%= employer[i].id_employee %>">
													Edytuj
							</button>
												<div class="modal fade" id="edit-<%= employer[i].id_employee %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
												 <div class="modal-dialog modal-dialog-centered modal-lg" role="document"   >
												  <div class="modal-content" >
												   <div class="modal-header text-center">
													   <h3 class= "col-10 modal-title text-center" id="title" align="center" style="font-size:20px; margin-bottom:20px;"> Edytuj prowadzącego </h3>
													  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
														 <span aria-hidden="true">&times;</span>
													 </button>
													 </div>
												  <div class="modal-body">
												  <form method="POST" action="/editemployer:<%= employer[i].id_employee %>" >
													  	 
															<input type="text" class="form-control" name="name" value="<%= employer[i].name %>"/>
														 <br>
														 
															<input type="text"  class="form-control" name="last_name" value="<%= employer[i].last_name %>"/>
